/* pages/order/detail/detail.wxss */

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-id {
  font-size: 36rpx;
  font-weight: bold;
}

.order-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.order-status.preparing {
  background-color: #d1ecf1;
  color: #0c5460;
}

.order-status.ready {
  background-color: #d4edda;
  color: #155724;
}

.order-info-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.order-items {
  margin-top: 20rpx;
}

.order-item-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item-row:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-right: 15rpx;
}

.item-quantity {
  font-size: 26rpx;
  color: #999;
}

.item-actions {
  margin-left: 20rpx;
}

.btn-view-recipe {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 8rpx;
  border: none;
}

.action-buttons {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.action-buttons .btn {
  width: 100%;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-actions .btn {
  flex: 1;
}
