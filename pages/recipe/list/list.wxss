/* pages/recipe/list/list.wxss */

.search-bar {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 60rpx 20rpx 30rpx;
  background-color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}

.category-scroll {
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 15rpx;
  background-color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background-color: #ff6b6b;
  color: #fff;
}

.action-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-bar .btn {
  flex: 1;
  font-size: 26rpx;
  padding: 20rpx;
}

.recipe-list {
  margin-top: 20rpx;
}

.recipe-item {
  display: flex;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.recipe-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recipe-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.recipe-tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.recipe-tag.required {
  background-color: #ff6b6b;
  color: #fff;
}

.recipe-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.recipe-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.recipe-footer {
  display: flex;
  gap: 30rpx;
}

.recipe-info {
  font-size: 24rpx;
  color: #999;
}
