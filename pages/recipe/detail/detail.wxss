/* pages/recipe/detail/detail.wxss */

.recipe-header-image {
  width: 100%;
  height: 500rpx;
  margin-bottom: 30rpx;
}

.recipe-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.recipe-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.recipe-category {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 15rpx;
  display: block;
}

.recipe-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 25rpx;
}

.recipe-meta {
  display: flex;
  gap: 40rpx;
  padding-top: 25rpx;
  border-top: 1rpx solid #f0f0f0;
}

.meta-item {
  display: flex;
  flex-direction: column;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
}

.ingredient-list {
  margin-top: 15rpx;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
}

.ingredient-amount {
  font-size: 26rpx;
  color: #999;
}

.step-list {
  margin-top: 15rpx;
}

.step-item {
  display: flex;
  margin-bottom: 40rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: #ff6b6b;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  display: block;
  margin-bottom: 15rpx;
}

.step-image {
  width: 100%;
  max-width: 500rpx;
  height: 300rpx;
  border-radius: 10rpx;
  margin-top: 15rpx;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 15rpx;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.nutrition-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 8rpx;
}

.nutrition-label {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.action-buttons .btn {
  flex: 1;
}
