/* pages/recipe/add/add.wxss */

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.required {
  color: #e74c3c;
}

.picker {
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.picker:active {
  background-color: #f5f5f5;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-item-half {
  flex: 1;
}

.input-small {
  flex: 1;
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.btn-small {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 8rpx;
  border: none;
}

.btn-delete {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: #e74c3c;
  color: #fff;
  border-radius: 8rpx;
  border: none;
}

.ingredient-list {
  margin-top: 15rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.step-list {
  margin-top: 15rpx;
}

.step-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.step-number {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.textarea-small {
  width: 100%;
  min-height: 120rpx;
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-bottom: 15rpx;
}

.step-image-upload {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.step-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder-small {
  color: #999;
  font-size: 24rpx;
}

.nutrition-form {
  margin-top: 15rpx;
}

.nutrition-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.nutrition-row:last-child {
  border-bottom: none;
}

.nutrition-label {
  font-size: 28rpx;
  color: #666;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
